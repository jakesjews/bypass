{
  "compilerOptions": {
    "rootDir": "src/bots",
    "outDir": "dist",
    "lib": ["ES2024"],
    "types": ["vitest/globals", "node"],
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitOverride": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true
  },
  "include": ["src/bots/**/*.ts"],
  "exclude": ["src/bots/**/*.test.ts"]
}
